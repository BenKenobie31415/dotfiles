######## Bspwm

# quit bspwm
alt + shift + e
    bspc quit 

# reload bspwm
alt + shift + c
	bspc wm -r && notify-send "bspwm reloaded"

# kill/close focused node
alt + {_,shift + }q
	bspc node -{k,c}

# reload sxhkd
alt + Escape
	pkill -USR1 -x sxhkd && notify-send "sxhkd reloaded"


######### Mappings

# terminal
alt + Return
	st
alt + control + Return
	st_

# launch-menu
alt + d
	rofi -show drun

# lockscreen
alt + F12
	~/.config/scripts/lock_script

# change background
alt + F5
	~/.config/scripts/wallpaperctl next

# increase volume
{_,shift} XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +{5,1}%
	
# decrease volume
{_,shift} XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -{5,1}%
		
# mute audio
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# toggle player (pause/play)
XF86AudioPlay
	playerctl play-pause
XF86AudioPause
	playerctl play-pause

# play next/previous media
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

# increase brightness
{_,shift} XF86MonBrightnessDown
	brightnessctl set {5,1}%-

# increase brightness
{_,shift} XF86MonBrightnessUp
	brightnessctl set +{5,1}%

######### Screenshots

# screenshot to clipboard
alt + s
	maim -s --hidecursor | xclip -selection clipboard -t image/png && notify-send 'screenshot copied'

# screenshot to preview
alt + ctrl + s
  maim -s --hidecursor /tmp/note.png && imv /tmp/note.png -u nearest_neighbour

# screenshot to file 
alt + shift + s
	maim -s --hidecursor ~/Pictures/Screenshots/$(date +%s).png && notify-send 'screenshot saved'


######### Color Picker
alt + c
	~/.config/scripts/copy-color-hex && notify-send "color copied"

######### Focus

# focus adjacent node
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus desktop
alt + {_,shift + }{0-9}
	bspc {desktop -f,node -d} '{0-9}'


######### Preselection

# preselect in direction
alt + ctrl + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

# choose preselection ratio
alt + ctrl + shift + {1-9}
	bspc node -o 0.{1-9}

# cancel preselection
alt + ctrl + shift + space
	bspc node -p cancel


######### State and Flags

# set flag for focused node
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle fullscreen for focused node
alt + f
  ~/.config/scripts/toggle_fullscreen


######### Resize

# https://www.reddit.com/r/bspwm/comments/g6bbcz/how_can_i_resize_windows_with_one_key_combination/
alt + control + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20, \
				top 0 -20 || bspc node -z bottom 0 -20, \
				right 20 0 || bspc node -z left 20 0}

