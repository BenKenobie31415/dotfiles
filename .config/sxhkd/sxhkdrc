######## Bspwm

# quit bspwm
alt + shift + e
    bspc quit 

# reload bspwm
alt + shift + c
	bspc wm -r && notify-send "bspwm reloaded"

# kill/close focused node
alt + {_,shift + }q
	bspc node -{k,c}


######### Mappings

# terminal
alt + Return
	st

# launch-menu
alt + d
	rofi -show drun

# lockscreen
alt + F12
    /home/benkenobi/.config/bspwm/scripts/lock_script

# change background
alt + F5
    /home/benkenobi/.config/bspwm/scripts/change_background.py

# reload sxhkd
alt + Escape
	pkill -USR1 -x sxhkd && notify-send "sxhkd reloaded"

# increase volume
{_,shift} XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +{5,1}%
	
# decrease volume
{_,shift} XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -{5,1}%
		
# mute audio
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# toggle player (pause/play)
XF86AudioPlay
	playerctl play-pause


######### Screenshots

# screenshot to clipboard
alt + s
	maim -s --hidecursor | xclip -selection clipboard -t image/png

# screenshot to preview
alt + ctrl + s
  maim -s --hidecursor /tmp/note.png && sxiv -s f /tmp/note.png

# screenshot to file 
alt + shift + s
	maim -s --hidecursor ~/Pictures/Screenshots/$(date +%s).png && notify-send 'Screenshot saved'


######### Focus

# focus adjacent node
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus desktop
alt + {_,shift + }{0-9}
	bspc {desktop -f,node -d} '{0-9}'


######### Preselection

# preselect in direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# choose preselection ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel preselection
alt + ctrl + space
	bspc node -p cancel


######### State and Flags

# set flag for focused node
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle fullscreen for focused node
alt + f
  /home/benkenobi/.config/bspwm/scripts/toggle_fullscreen

